/* pages/fightOrderInfo/fightOrderInfo.wxss */
.orderInfoTop{
 height: 50%;
  background-color: #428FFD;
  padding: 20rpx
}
.orderDetailInfo{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  background-color: #fff;
  padding:30rpx;
  box-sizing: border-box;
  line-height:48rpx;
  font-size: 28rpx
}
.orderInfoName{
  color: #AAAAAA
}
.infoList{
  height:80rpx;
  padding:0 40rpx;
  line-height:80rpx;
  color: #666666
}
.orderPerson{
    border: 1px solid #EFEFEF;
}
.orderPersonInfo{
  border-bottom: 1px solid #EFEFEF;
  display: flex;
  justify-content: space-between;
  height:90rpx;
  line-height:90rpx;
  padding:0 40rpx;
  background-color: #fff;
}
.choosePerson{
  height:90%;
  display:flex;
  align-items:center;
  width:50rpx;
}
.personNumShow{
  display:inline-block;
  height:50rpx;
  border:1px solid #ccc;
  line-height:50rpx;
  width:50rpx;
  text-align:center;
  border-radius:15rpx;
  margin: 0 10rpx;
}
.personNum {
  display:flex;
  align-items:center;
  justify-content: center
  
}
.personNum input{
  text-align: right
}
.personNum image{
  width: 25rpx;
  height:25rpx;
  margin-left: 20rpx
}
.payOrder{
  position: fixed;
  bottom: 0;
  width: 100%;
}
.payMoneyBox{
  width:100%;
  height:90rpx;
  line-height:90rpx;
  padding:0 40rpx;
  background-color:#FFF;
}
.payMoney{
  width: 60%;
  display:inline-block;
}
.payMoneyBtn{
  text-align:center;
  width:40%;
  display:inline-block;
  background: -webkit-linear-gradient(left,  #407FFD 20%,#44A0FE 100%);
  color: #fff;
  border-radius:5rpx;
}
.payMoneyText{
  color: #FFAC00
}
.userAgreement{
  padding:20rpx;
  display:flex;
  align-items:center;
  color:#666666;
}
.userAgreement image{
  width:30rpx;
  height:30rpx;
  margin-right:10rpx
}
.mask{
  width:100%;
  height:100%;
  position:fixed;
  background-color:#999;
  z-index:9999;
  top:0;
  left:0;
  opacity:0.5;
}